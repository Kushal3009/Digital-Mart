        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 10px 0px 10px 0px;
        }

        .card {
            width: 300px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-decoration: none;
            color: inherit;
            /* Inherit link color */
        }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            /* Add hover effect */
        }

        .card img {
            width: 100%;
            height: auto;
            /* Set height to auto for responsive images */
            object-fit: contain;
            padding: 5px 2px 0px 2px;
            transform: scale(0.8);
            transition: transform 0.5s ease;
        }



        .card img:hover {
            transform: scale(1);
        }







        .card-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }


        .card-title {
            font-size: 1.1rem;
            margin-bottom: 5px;
            text-align: center;
            height: 40px;
            /* Fixed height for card title */
            overflow: hidden;
            text-overflow: ellipsis;
        }



        .card-price {
            font-size: 1.1rem;
            color: #666;
            margin-bottom: 5px;
            text-align: center;
        }

        .card-discount {
            font-size: 0.9rem;
            color: #00a000;
            margin-bottom: 5px;
            text-align: center;
        }

        .card-rating {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-rating .stars {
            color: #fdd835;
            /* Material yellow */
            margin-right: 5px;
        }

        .card-total-ratings {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 10px;
        }



        /* Responsive Styles */
        @media (max-width: 600px) {
            .card {
                width: calc(50% - 20px);
            }

            .card img {
                height: 150px;
                /* Adjust the height for smaller screens */
            }
        }

        @media (min-width: 601px) {
            .card img {
                height: 200px;
                /* Adjust the height for larger screens */
            }
        }




    </style>
