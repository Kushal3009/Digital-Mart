<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-5 sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/" style="font-weight: 500;">DigitalMart</a>
        </div>
    </nav>


    <% if(error==="Password Not match" || error==='User not found' ) { %>
        <h2 id="errorMessage" class="text-danger text-center">
            <%= error %>
        </h2>
        <% } %>
            <div class="bg-light d-flex align-items-center justify-content-center vh-100">
                <div class="bg-white p-4 rounded shadow-sm w-100" style="max-width: 400px;">
                    <h2 class="text-2xl font-semibold mb-4 text-center">Welcome to Seller Login</h2>
                    <form method="post" action="/api/seller_login" content-type="application/x-www-form-urlencoded">
                        <div class="mb-3">
                            <label for="seller_email" class="form-label">Username</label>
                            <input type="text" id="seller_email" name="seller_email" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="seller_password" class="form-label">Password</label>
                            <input type="password" id="seller_password" name="seller_password" class="form-control">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" id="remember" name="remember" class="form-check-input">
                            <label for="remember" class="form-check-label">Remember me</label>
                        </div>
                        <div class="mb-3">
                            <a href="/forgotPasswordseller" class="text-decoration-none">Forgot password?</a>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">Sign in</button>
                        </div>
                    </form>
                    <div class="text-center">
                        <p class="text-secondary">Don't have an account? <a href="/seller_registration"
                                class="text-decoration-none">Sign up</a></p>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
                integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
                crossorigin="anonymous"></script>

            <script>
                setTimeout(function () {
                    var errorMessage = document.getElementById('errorMessage');
                    if (errorMessage) {
                        errorMessage.style.display = 'none';
                    }
                }, 2000); // 5000 milliseconds = 5 seconds
            </script>
</body>

</html>